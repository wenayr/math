{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    //"module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    //"checkJs": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    //    "requires": true,
    //    "skipLibCheck": true,
    //    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    //    "strict": true,
    //    "noFallthroughCasesInSwitch": true,
    //    "resolveJsonModule": true,
    //    "isolatedModules": true,

    "lib": [
      "esnext"
    ],
    //    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "./src/types/*"
      ]
    }
  },
  "include": [
    //"./src/**/*"
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "../client/node_modules/"
  ]
}

